<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyGlobal" persistent-id="global"
        placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
       
   	<cm:property-placeholder id="propertyLocal"
        persistent-id="wsmensajesocio" placeholder-prefix="{{" placeholder-suffix="}}"/>
        
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    <bean class="cl.coopeuch.integracion.wsmensajesocio.util.RouteFacade" id="beanRouteFacade"/>
    <camelcxf:cxfEndpoint address="/WSMensajeSocio"
        id="endpointWSMensajeSocio"
        serviceClass="cl.coopeuch.integracion.wsmensajesocio.wsdl.WSMensajeSocioSOAPPortType" wsdlURL="etc/wsdl/WSMensajeSocio.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
    
    <camelcxf:cxfEndpoint address="{{proxy.mensajesocio.endpoint}}"
        id="toEndpointWSMensajeSocio" loggingFeatureEnabled="true"
        serviceClass="cl.coopeuch.integracion.wsmensajesocio.wsdl.proxy.MensajeSocioSoap" wsdlURL="etc/wsdl/WSMensajeSocioProxy.wsdl"/>
    
    
	<camelcxf:rsServer address="/RSMensajeSocio"
        id="endpointRSMensajeSocio" serviceClass="cl.coopeuch.integracion.wsmensajesocio.wsdl.WSMensajeSocioSOAPPortType"/>
    <camelContext id="servicio-WSMensajeSocio" xmlns="http://camel.apache.org/schema/blueprint">
		<route id="inicio-soap">
            <from id="inicioFromSoap" uri="cxf:bean:endpointWSMensajeSocio"/>
            <to id="soapToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSMensajeSocio"/>
            <to id="restToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="cxf-inicio">
			<from id="inicioFromServicio" uri="direct:cxf-inicio"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <setBody id="inicioSetBody">
                    <simple>$simple{body.get(0)}</simple>
                </setBody>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionCrear">
                        <simple>${header.operationName} == 'consultarMensajePerzonalizado'</simple>
                        <to id="toConsultarMensajePerzonalizado" uri="direct:consultarMensajePerzonalizado"/>
                    </when>
                    <otherwise id="inicioOtherwise">
                        <throwException
                            exceptionType="java.lang.Exception"
                            id="throwExceptionOperacionInvalida" message="La operacion solicitada es invalida"/>
                    </otherwise>
                </choice>
                <doCatch id="inicioDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="inicioToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarMensajePerzonalizado">
            <from id="consultarMensajePerzonalizadoFrom" uri="direct:consultarMensajePerzonalizado"/>
            <doTry id="consultarMensajePerzonalizadoTry">
                <marshal id="consultarMensajePerzonalizadoMarshal">
                    <jaxb contextPath="cl.coopeuch.integracion.wsmensajesocio.wsdl"/>
                </marshal>
                <bean ref="beanRouteFacade" method="requestConsultarMensajePerzonalizado"/>
                <removeHeaders id="consultarMensajePerzonalizadoRemoveHeaders" pattern="CamelHttp*"/>
            	<to id="consultarMensajePerzonalizadoTo" uri="cxf:bean:toEndpointWSMensajeSocio"/>
				<removeHeaders id="consultarMensajePerzonalizadoRemoveHeaders2" pattern="CamelHttp*"/>
				<bean ref="beanRouteFacade" method="responseConsultarMensajePerzonalizado"/>
                <log message="Respuest4: (${body})"/>
		         <stop/>
				<doCatch id="consultarMensajePerzonalizadoDoCatchAMQ">
                    <exception>org.apache.camel.ExchangeTimedOutException</exception>
                    <setProperty id="consultarMensajePerzonalizadoCodigoErrorAMQ" propertyName="codigoError">
                        <constant>502</constant>
                    </setProperty>
                    <to id="toConsultarMensajePerzonalizadoExcepcionAMQ" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarMensajePerzonalizadoDoCatch">
                    <exception>java.lang.Exception</exception>
					<setProperty id="consultarMensajePerzonalizadoCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <log loggingLevel="ERROR" message="${exception.message}"/>
                    <to id="consultarMensajePerzonalizadoToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="excepcion">
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <doTry id="excepcionTry">
                <bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/>
                <marshal id="excepcionMarshalJson">
                    <json library="Jackson"/>
                </marshal>
                <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
                <to id="excepcionToAmqFault" uri="beanAMQ:{{amq.queue.fault}}?errorHandlerLoggingLevel=TRACE&amp;exchangePattern=InOnly"/>
                <bean id="excepcionBeanExcepcion"
                    method="excepcionCrear" ref="beanRouteFacade"/>
                <doCatch id="excepcionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setBody id="exceptionFinalSetBodyError">
                        <simple>${exception}, Body -&gt; ${body}</simple>
                    </setBody>
                    <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/>
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</blueprint>
