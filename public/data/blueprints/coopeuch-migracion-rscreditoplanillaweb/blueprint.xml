            <setProperty id="_setProperty2" propertyName="userId">
                <simple>${body.get(0).userId}</simple>
            </setProperty>
            <setProperty id="_setProperty3" propertyName="canalLlamada">
                <simple>${body.get(0).canalLlamada}</simple>
