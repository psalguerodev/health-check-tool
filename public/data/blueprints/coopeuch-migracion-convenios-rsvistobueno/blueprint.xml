<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyGlobal" persistent-id="global"
        placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyLocal"
        persistent-id="wsvistobueno" placeholder-prefix="[{"
        placeholder-suffix="}]" update-strategy="reload"/>
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    <bean class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close" id="dataSourceSqlServer">
        <property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver"/>
        <property name="url" value="[{jdbc.sqlserver.url.wsvistobueno}]/PortalConvenio;charset=iso_1"/>
        <property name="username" value="[{jdbc.sqlserver.username.wsvistobueno}]"/>
        <property name="password" value="[{jdbc.sqlserver.password.wsvistobueno}]"/>
        <property name="timeBetweenEvictionRunsMillis" value="[{jdbc.sqlserver.timeBetweenEvictionRunsMillis.wsvistobueno}]"/>
        <property name="numTestsPerEvictionRun" value="[{jdbc.sqlserver.numTestsPerEvictionRun.wsvistobueno}]"/>
        <property name="minEvictableIdleTimeMillis" value="[{jdbc.sqlserver.minEvictableIdleTimeMillis.wsvistobueno}]"/>
        <property name="maxActive" value="[{jdbc.sqlserver.maxActive.wsvistobueno}]"/>
    </bean>
    <bean class="cl.coopeuch.integracion.entidad.util.RouteFacade" id="beanRouteFacade"/>
    <camelcxf:cxfEndpoint address="/convenios/WSVistoBueno"
        id="endpointWSVistoBueno"
        serviceClass="cl.coopeuch.integracion.entidad.wsdl.WSVistoBuenoSOAPPortType" wsdlURL="etc/wsdl/WSVistoBueno.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
	<camelcxf:rsServer address="/convenios/RSVistoBueno"
        id="endpointRSVistoBueno" serviceClass="cl.coopeuch.integracion.entidad.wsdl.WSVistoBuenoSOAPPortType"/>
    <camelContext id="servicio-vistobueno" trace="true" xmlns="http://camel.apache.org/schema/blueprint">
		<route id="inicio-soap">
            <from id="inicioFromSoap" uri="cxf:bean:endpointWSVistoBueno"/>
            <to id="soapToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSVistoBueno"/>
            <to id="restToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="cxf-inicio">
			<from id="inicioFromServicio" uri="direct:cxf-inicio"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <setBody id="inicioSetBody">
                    <simple>$simple{body.get(0)}</simple>
                </setBody>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionIngresarSolicitudPendiente">
                        <simple>${header.operationName} == 'ingresarSolicitudPendiente'</simple>
                        <to id="toIngresarSolicitudPendiente" uri="direct:ingresarSolicitudPendiente"/>
                    </when>
                    <when id="inicioWhenOperacionConsultarSolicitudPendiente">
                        <simple>${header.operationName} == 'consultarSolicitudPendiente'</simple>
                        <to id="toConsultarSolicitudPendiente" uri="direct:consultarSolicitudPendiente"/>
                    </when>
                    <when id="inicioWhenOperacionEnviarNotificacion">
                        <simple>${header.operationName} == 'enviarNotificacion'</simple>
                        <to id="toEnviarNotificacion" uri="direct:enviarNotificacion"/>
                    </when>
                    <otherwise id="inicioOtherwise">
                        <throwException
                            exceptionType="java.lang.Exception"
                            id="throwExceptionOperacionInvalida" message="La operacion solicitada es invalida"/>
                    </otherwise>
                </choice>
                <doCatch id="inicioDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="inicioToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="ingresarSolicitudPendiente">
            <from id="ingresarSolicitudPendienteFrom" uri="direct:ingresarSolicitudPendiente"/>
            <doTry id="ingresarSolicitudPendienteTry">
                <log id="idholaaa" loggingLevel="ERROR" message="${body}"/>
                <log id="idhola" loggingLevel="INFO" message="Hola"/>
                <setProperty id="setPropertyRut" propertyName="rut">
                    <xpath resultType="String">//rut</xpath>
                </setProperty>
                <setProperty id="setPropertyRutEjecutivo" propertyName="rutEjecutivo">
                    <xpath resultType="String">//rutEjecutivo</xpath>
                </setProperty>
                <setProperty id="setPropertySolicitudIdIngresar" propertyName="solicitudId">
                    <xpath resultType="String">//solicitudId</xpath>
                </setProperty>
                <setProperty id="setPropertyRutSocioIngresar" propertyName="rutSocio">
                    <xpath resultType="String">//rutSocio</xpath>
                </setProperty>
                <setProperty id="setPropertyEstadoIngresar" propertyName="estado">
                    <xpath resultType="String">//estado</xpath>
                </setProperty>
                <setProperty id="setPropertyIdCreditoIngresar" propertyName="idCredito">
                    <xpath resultType="String">//idCredito</xpath>
                </setProperty>
                <setProperty id="setPropertyCantidad" propertyName="cantidad">
                    <xpath resultType="int">//cantidad</xpath>
                </setProperty>
                <setProperty id="setPropertyRazon" propertyName="razon">
                    <xpath resultType="String">//razon</xpath>
                </setProperty>
                <setProperty id="setPropertyObservacion" propertyName="observacion">
                    <xpath resultType="String">//observacion</xpath>
                </setProperty>
                <setProperty id="setPropertyOperacionTotal" propertyName="operacionTotal">
                    <xpath resultType="int">//operacionTotal</xpath>
                </setProperty>
                <setProperty id="setPropertyValorCuota" propertyName="valorCuota">
                    <xpath resultType="int">//valorCuota</xpath>
                </setProperty>
                <setProperty id="setPropertyOtrosDescuentos" propertyName="otrosDescuentos">
                    <xpath resultType="int">//otrosDescuentos</xpath>
                </setProperty>
                <setProperty id="setPropertyDescuentoTotal" propertyName="descuentoTotal">
                    <xpath resultType="int">//descuentoTotal</xpath>
                </setProperty>
                <setProperty id="setPropertyNombreSocio" propertyName="nombreSocio">
                    <xpath resultType="String">//nombreSocio</xpath>
                </setProperty>
                <setProperty id="setPropertyNombreAprobador" propertyName="nombreAprobador">
                    <xpath resultType="String">//nombreAprobador</xpath>
                </setProperty>
                <setProperty id="setPropertyCanalLlamada" propertyName="canalLlamada">
                    <xpath resultType="String">//canalLlamada</xpath>
                </setProperty>
                <setProperty id="setPropertyInformado" propertyName="informado">
                    <xpath resultType="String">//informado</xpath>
                </setProperty>
                <log loggingLevel="ERROR" message="Tomo datos del request"/>
                <to id="ingresarSolicitudPendiente-to" uri="sql-stored:classpath:etc/sql/sp_crear_solicitud_VB.sql?dataSource=dataSourceSqlServer&amp;outputHeader=responsePA_INGRESARSOLICITUDPENDIENTE"/>
                <log loggingLevel="ERROR" message="Salida PA ingresarSolicitudPendiente"/>
                <bean id="beanResponseIngresarSolicitudPendiente" method="responseIngresarSolicitudPendiente" ref="beanRouteFacade"/>
                <log loggingLevel="ERROR" message="Procesa ingreso SolicitudPendiente"/>
               <doCatch id="ingresarSolicitudPendienteDoCatch">
                    <exception>java.lang.Exception</exception>
					          <setProperty id="ingresarSolicitudPendienteCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="ingresarSolicitudPendienteToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarSolicitudPendiente">
            <from id="consultarSolicitudPendienteFrom" uri="direct:consultarSolicitudPendiente"/>
            <doTry id="consultarSolicitudPendienteTry">
                <setProperty id="setPropertySolicitudId" propertyName="solicitudId">
                    <xpath resultType="String">//solicitudId</xpath>
                </setProperty>
                <setProperty id="setPropertyRutSocio" propertyName="rutSocio">
                    <xpath resultType="String">//rutSocio</xpath>
                </setProperty>
                <setProperty id="setPropertyIdCredito" propertyName="idCredito">
                    <xpath resultType="String">//idCredito</xpath>
                </setProperty>
                <setProperty id="setPropertyEstado" propertyName="estado">
                    <xpath resultType="String">//estado</xpath>
                </setProperty>
                <log loggingLevel="INFO" message="consultarSolicitudPendiente: ${header.solicitudId} || ${header.rutSocio} || ${header.idCredito} || ${header.estado}"/>
                <log id="idChau" loggingLevel="ERROR" message="Chau"/>
                <to id="consultarSolicitudPendiente-to" uri="sql-stored:classpath:etc/sql/sp_consultar_solicitud_VB.sql?dataSource=dataSourceSqlServer&amp;outputHeader=responsePA_CONSULTARSOLICITUDPENDIENTE"/>
                <log loggingLevel="ERROR" message="Salida PA consultarSolicitudPendiente"/>
                <bean id="beanResponseConsultarSolicitudPendiente" method="responseConsultarSolicitudPendiente" ref="beanRouteFacade"/>
                <log loggingLevel="ERROR" message="Procesa consulta SolicitudPendiente"/>
                <doCatch id="consultarSolicitudPendienteDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="consultarSolicitudPendienteCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="consultarSolicitudPendienteToExcepcion" uri="direct:excepcion"/>
                </doCatch> 
            </doTry>
        </route>
        <route id="enviarNotificacion">
            <from id="enviarNotificacionFrom" uri="direct:enviarNotificacion"/>
             <doTry id="enviarNotificacionTry">
           
            <setProperty id="_setProperty10" propertyName="colaSQS">
                 <simple>{{amazon.aws.access.key.cola}}</simple>
            </setProperty>
            <log loggingLevel="ERROR" message="Paso setProperty de AWS COLA {{amazon.aws.access.key.cola}}"/>
            <setProperty id="setPropertyMensaje" propertyName="mensaje">
                 <xpath resultType="String">//mensaje</xpath>
            </setProperty>
            <log id="_log2" message="Mensaje hacia cola SQS:::: ${header.mensaje}"/>
            <bean id="_bean2" method="insertarSQS" ref="beanRouteFacade"/>
            <log loggingLevel="ERROR" message="Paso Bean insertar SQS"/>
            <doCatch id="enviarNotificacionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <exception>java.io.IOException</exception>
                    <setProperty id="_setProperty11" propertyName="colaSQS">
                        <simple>{{amazon.aws.access.key.cola.error}}</simple>
                    </setProperty>
                    <bean id="_bean2" method="insertarSQS" ref="beanRouteFacade"/>
                    <log loggingLevel="ERROR" message="Paso Bean insertar SQS para ERROR"/>
                    <setProperty id="enviarNotificacionCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="enviarNotificacionToExcepcion" uri="direct:excepcion"/>
                </doCatch> 
            </doTry>
        </route>
        <route id="excepcion">
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <doTry id="excepcionTry">
                <bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/>
                <marshal id="excepcionMarshalJson">
                    <json library="Jackson"/>
                </marshal>
                <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
                <to id="excepcionToAmqFault" uri="beanAMQ:{{amq.queue.fault}}?errorHandlerLoggingLevel=TRACE&amp;exchangePattern=InOnly"/>
                <bean id="excepcionBeanExcepcion"
                    method="excepcionCrear" ref="beanRouteFacade"/>
                <doCatch id="excepcionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setBody id="exceptionFinalSetBodyError">
                        <simple>${exception}, Body -&gt; ${body}</simple>
                    </setBody>
                    <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/>
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</blueprint>
