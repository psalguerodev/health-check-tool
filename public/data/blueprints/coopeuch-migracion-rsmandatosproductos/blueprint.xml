                <bean id="_bean3" method="transformarIOC722501I" ref="beanRouteFacade"/>
                <marshal id="_marshal1">
                    <bindy
                        classType="cl.coopeuch.integracion.mandatosproductos.modelo.IOC722501I" type="Fixed"/>
                </marshal>
                <to id="validarCantidadCuotasToAmq" uri="beanAMQ:{{amq.queue.temp.int}}?preserveMessageQos=true&amp;jmsMessageType=Text&amp;replyToType=Temporary&amp;synchronous=true&amp;exchangePattern=InOut&amp;deliveryPersistent=false&amp;replyToDeliveryPersistent=false"/>
                <choice id="_choice1">
                    <when id="_when2">
                        <simple>${body} contains 'ECNLERR'</simple>
                        <unmarshal id="_unmarshal1">
                            <bindy
                                classType="cl.coopeuch.integracion.mandatosproductos.modelo.IOCERROR" type="Fixed"/>
                        </unmarshal>
                        <bean id="errorIOCBean"
                            method="transformarIocError" ref="beanRouteFacade"/>
