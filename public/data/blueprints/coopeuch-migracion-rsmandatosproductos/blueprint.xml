                            <bindy
                                classType="cl.coopeuch.integracion.mandatosproductos.modelo.IOC722501O" type="Fixed"/>
                        </unmarshal>
                        <bean id="_bean7"
                            method="transformarIOC722501OPensionados" ref="beanRouteFacade"/>
                    </otherwise>
                </choice>
                <doCatch id="_doCatch4">
