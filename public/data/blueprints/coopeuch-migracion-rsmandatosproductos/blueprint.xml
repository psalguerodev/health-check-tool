        <route id="inicio-soap">
            <from id="soapInicio" uri="cxf:bean:endpointWSMandatosProductosTefMasiva"/>
            <setProperty id="_setProperty2" propertyName="tipoRequest">
                <simple>$simple{body.get(0).class.getSimpleName()}</simple>
            </setProperty>
            <setBody id="MandatosProductosSetBody">
                <simple>$simple{body.get(0)}</simple>
            </setBody>
            <to id="soapToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSMandatosProductosTefMasiva"/>
            <log id="_log1" message="Paso ${body}"/>
            <setProperty id="_setProperty3" propertyName="tipoRequest">
                <simple>$simple{body.get(0).class.getSimpleName()}</simple>
            </setProperty>
            <setBody id="MandatosProductosSetBody1">
                <simple>$simple{body.get(0)}</simple>
            </setBody>
            <to id="restToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-jms">
            <from id="jmsInicio" uri="beanAMQ:{{amq.mandatosproductos.req}}"/>
            <to id="jmsToInicio" uri="direct:cxf-inicio"/>
        </route>
        <route id="cxf-inicio">
            <from id="inicioFromServicio" uri="direct:cxf-inicio"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionconsultaTef">
                        <simple>${header.operationName} == 'consultar'</simple>
                        <to id="toMandatosProductos" uri="direct:consultar"/>
                    </when>
                    <when id="_when1">
                        <simple>${header.operationName} == 'registrarAbonoRemuneracion'</simple>
                        <to id="toRegistrarAbonoRemuneracion" uri="direct:registrarAbonoRemuneracion"/>
                    </when>
                    <when id="_when3">
                        <simple>${header.operationName} == 'registrarMandatoPensionados'</simple>
                        <to id="toRegistrarMandatoPensionados" uri="direct:registrarMandatoPensionados"/>
                    </when>
                     <when id="_when9">
                        <simple>${header.operationName} == 'registrarMandatoFach'</simple>
                        <to id="toRegistrarMandatoFach" uri="direct:registrarMandatoFach"/>
                    </when>
