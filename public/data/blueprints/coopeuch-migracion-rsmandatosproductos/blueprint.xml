            </doTry>
        </route>
        <route id="_route1">
            <from id="fromRegistrarMandatoPensionados" uri="direct:registrarMandatoPensionados"/>
            <doTry id="_doTry1">
                <bean id="_bean5" method="crearJMSCorrelationId24" ref="beanRouteFacade"/>
