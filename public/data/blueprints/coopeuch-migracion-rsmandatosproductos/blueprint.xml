                </marshal>
                <to id="_to4" uri="beanAMQ:{{amq.queue.temp.int}}?preserveMessageQos=true&amp;jmsMessageType=Text&amp;replyToType=Temporary&amp;synchronous=true&amp;exchangePattern=InOut&amp;deliveryPersistent=false&amp;replyToDeliveryPersistent=false"/>
                <choice id="_choice2">
                    <when id="_when4">
                        <simple>${body} contains 'ECNLERR'</simple>
                        <unmarshal id="_unmarshal3">
                            <bindy
