				<log id="consultarTramaResponse"
					message="Trama recibida = ${body}" />
				<transform id="consultarTransformBody">
					<simple>&lt;trama&gt;${body}&lt;/trama&gt;</simple>
				</transform>
				<to id="consultarToXSLSOAP"
					uri="xslt://etc/xsl/response/IOC780001O_consultar.xsl?saxon=true" />
				<unmarshal id="consultarUnmarshal">
					<jaxb
						contextPath="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.wsdl" />
				</unmarshal>
				<doCatch id="consultarDoCatchAMQ">
					<exception>org.apache.camel.ExchangeTimedOutException</exception>
					<setProperty id="consultarCodigoErrorAMQ"
