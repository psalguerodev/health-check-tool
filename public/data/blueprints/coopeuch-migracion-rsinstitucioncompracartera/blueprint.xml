		<property name="userName" value="{[amq.username]}" />
		<property name="password" value="{[amq.password]}" />
		<property name="usePooledConnection" value="true" />
	</bean>
	<bean
		class="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.util.RouteFacade"
		id="beanRouteFacade" />
	<camelcxf:cxfEndpoint
		address="/WSInstitucionCompraCartera"
		id="endpointWSInstitucionCompraCartera"
		serviceClass="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.wsdl.WSInstitucionCompraCarteraSOAPPortType"
		wsdlURL="etc/wsdl/WSInstitucionCompraCartera.wsdl">
		<camelcxf:properties>
			<entry key="schema-validation-enabled" value="true" />
		</camelcxf:properties>
	</camelcxf:cxfEndpoint>
	<camelcxf:rsServer address="/RSInstitucionCompraCartera"
	id="endpointRSInstitucionCompraCartera" serviceClass="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.wsdl.WSInstitucionCompraCarteraSOAPPortType"/>
	<camelContext id="servicio-institucion-compra-cartera"
		xmlns="http://camel.apache.org/schema/blueprint">
		<route id="inicio-soap">
			<from id="inicioFromSoap"
				uri="cxf:bean:endpointWSInstitucionCompraCartera" />
			<to id="soapToInicioWs" uri="direct:cxf-inicio" />
		</route>
		<route id="inicio-rest">
		<from id="restInicio" uri="cxfrs:bean:endpointRSInstitucionCompraCartera"/>
		<to id="restToInicioWs" uri="direct:cxf-inicio"/>
		</route>
		<route id="cxf-inicio">
			<from id="inicioFromServicio" uri="direct:cxf-inicio" />
			<doTry id="inicioTry">
				<setProperty id="inicioSetRequest"
					propertyName="requestEntrada">
					<simple>${body}</simple>
				</setProperty>
				<setProperty id="inicioSetTipoRequest"
					propertyName="tipoRequest">
					<simple>$simple{body.get(0).class.getSimpleName()}</simple>
				</setProperty>
				<setBody id="inicioSetBody">
					<simple>$simple{body.get(0)}</simple>
				</setBody>						
				<toD id="_toD1" uri="direct:${header.operationName}"/>
							<doCatch id="inicioDoCatch">
					<exception>java.lang.Exception</exception>
					<setProperty id="inicioCodigoError"
						propertyName="codigoError">
						<constant>500</constant>
					</setProperty>
					<to id="inicioToExcepcion" uri="direct:excepcion" />
				</doCatch>
			</doTry>
		</route>
		<route id="crear">
			<from id="crearFrom" uri="direct:crear" />
			<doTry id="crearTry">
				<marshal id="crearMarshal">
					<jaxb
						contextPath="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.wsdl" />
				</marshal>
				<convertBodyTo id="crearConvertBodyToString"
					type="java.lang.String" />
				<bean id="crearUUID" method="crearJMSCorrelationId24"
					ref="beanRouteFacade" />
				<to id="crearToXSLTrama"
					uri="xslt://etc/xsl/request/IOC780001I_crear.xsl" />
				<log id="crearTrama" message="Trama generada = ${body}" />
				<to id="crearToAmq"
					uri="beanAMQ:{{amq.queue.temp.int}}?preserveMessageQos=true&amp;jmsMessageType=Text&amp;replyToType=Temporary&amp;synchronous=true&amp;exchangePattern=InOut&amp;deliveryPersistent=false&amp;replyToDeliveryPersistent=false" />
				<log id="buscarTramaResponse" loggingLevel="TRACE" message="Trama recibida = ${body}"/>
                <transform id="crearTransformBody">
                    <simple>&lt;trama&gt;${body}&lt;/trama&gt;</simple>
                </transform>
				<to id="crearToXSLSOAP"
					uri="xslt://etc/xsl/response/IOC780001O_crear.xsl?saxon=true" />
				<unmarshal id="crearUnmarshal">
					<jaxb
						contextPath="cl.coopeuch.integracion.entidad.servicioinstitucioncompracartera.wsdl" />
				</unmarshal>
				<log id="_log2" loggingLevel="ERROR"
					message="$ !!!!!!!!!!!!!!!!!  ${body}" />
				<doCatch id="crearDoCatchAMQ">
					<exception>org.apache.camel.ExchangeTimedOutException</exception>
					<setProperty id="crearCodigoErrorAMQ"
						propertyName="codigoError">
						<constant>502</constant>
					</setProperty>
					<to id="toCrearExcepcionAMQ" uri="direct:excepcion" />
				</doCatch>
				<doCatch id="crearDoCatch">
					<exception>java.lang.Exception</exception>
					<setProperty id="crearCodigoError"
						propertyName="codigoError">
						<constant>500</constant>
					</setProperty>
					<to id="crearToExcepcion" uri="direct:excepcion" />
				</doCatch>
			</doTry>
		</route>
		<route id="consultar">
			<from id="consultarFrom" uri="direct:consultar" />
			<doTry id="consultarTry">
				<marshal id="consultarMarshal">
