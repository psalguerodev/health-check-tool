<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:http="http://cxf.apache.org/transports/http/configuration"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyDB2" persistent-id="global"
                             placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyGlobal" persistent-id="wsbonoescolaridad"
                             placeholder-prefix="{{" placeholder-suffix="}}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyGlobalDb2"
                             persistent-id="globalDb2" placeholder-prefix="[["
                             placeholder-suffix="]]" update-strategy="reload"/>
        
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    
    <bean class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close" id="dataSourceSybase">
        <property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver"/>
        <property name="url" value="{{jdbc.sybase.url.cache}};charset=iso_1"/>
        <property name="username" value="{{jdbc.sybase.username.cache}}"/>
        <property name="password" value="{{jdbc.sybase.password.cache}}"/>
        <property name="timeBetweenEvictionRunsMillis" value="{{jdbc.sybase.timeBetweenEvictionRunsMillis.cache}}"/>
        <property name="numTestsPerEvictionRun" value="{{jdbc.sybase.numTestsPerEvictionRun.cache}}"/>
        <property name="minEvictableIdleTimeMillis" value="{{jdbc.sybase.minEvictableIdleTimeMillis.cache}}"/>
        <property name="maxActive" value="{{jdbc.sybase.maxActive.cache}}"/>
    </bean>
    
    <bean class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close" id="dataSourceDB2">
        <property name="driverClassName" value="com.ibm.as400.access.AS400JDBCDriver"/>
        <property name="url" value="[[jdbc.db2.url.servicio]]"/>
        <property name="username" value="[[jdbc.db2.username.creditos]]"/>
        <property name="password" value="[[jdbc.db2.password.creditos]]"/>
        <property name="timeBetweenEvictionRunsMillis" value="{{jdbc.db2.timeBetweenEvictionRunsMillis.creditosconsumo}}"/>
        <property name="numTestsPerEvictionRun" value="{{jdbc.db2.numTestsPerEvictionRun.creditosconsumo}}"/>
        <property name="minEvictableIdleTimeMillis" value="{{jdbc.db2.minEvictableIdleTimeMillis.creditosconsumo}}"/>
        <property name="maxActive" value="{{jdbc.db2.maxActive.creditosconsumo}}"/>
    </bean>
    
    <bean class="cl.coopeuch.integracion.wsbonoescolaridad.util.RouteFacade" id="beanRouteFacade"/>
    
    <camelcxf:cxfEndpoint address="/WSBonoEscolaridad"
                          id="endpointWSBonoEscolaridad"
                          serviceClass="cl.coopeuch.integracion.wsbonoescolaridad.wsdl.WSBonoEscolaridadSOAPPortType" wsdlURL="etc/wsdl/WSBonoEscolaridad.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
    
    <camelcxf:cxfEndpoint address="{{integracion.wsbonoescolaridadCRM_asmx}}"
    id="edpointBonoEscolaridadCRMasmx" serviceClass="cl.coopeuch.integracion.wsbonoescolaridadCRM_asmx.wsdl.WSBonoescolaridadSoap"/>
    
    <camelcxf:rsServer address="/RSBonoEscolaridad"
                       id="endpointRSBonoEscolaridad" serviceClass="cl.coopeuch.integracion.wsbonoescolaridad.wsdl.WSBonoEscolaridadSOAPPortType">
        <camelcxf:providers>
            <bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
                <property name="serializeAsArray" value="true"/>
                <property name="arrayKeys">
                    <list>
                        <value>detalleError</value>
                    </list>
                </property>
                <property name="ignoreEmptyArrayValues" value="true"/>
            </bean>
        </camelcxf:providers>
    </camelcxf:rsServer>
    
    <camelContext id="WSBonoEscolaridad" xmlns="http://camel.apache.org/schema/blueprint">
        <route id="inicio-soap">
            <from id="inicioFromSoap" uri="cxf:bean:endpointWSBonoEscolaridad"/>
            <to id="soapToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSBonoEscolaridad"/>
            <to id="restToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="cxf-inicio">
            <from id="inicioFromServicio" uri="direct:cxf-inicio"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <setBody id="inicioSetBody">
                    <simple>$simple{body.get(0)}</simple>
                </setBody>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionCrear">
                        <simple>${header.operationName} == 'consultarMoraHistorica'</simple>
                        <to id="toCrear" uri="direct:consultarMoraHistorica"/>
                    </when>
                    <when id="inicioWhenOperacionIngresarSolicitudCRM">
                        <simple>${header.operationName} == 'ingresarSolicitudCRM'</simple>
                        <to id="toCrear" uri="direct:ingresarSolicitudCRM"/>
                    </when>
                    <when id="inicioWhenOperacionActualizarSolicitudCRM">
                        <simple>${header.operationName} == 'actualizarSolicitudCRM'</simple>
                        <to id="toCrear" uri="direct:actualizarSolicitudCRM"/>
                    </when>
                    <when id="inicioWhenOperacionValidarPostulacion">
                        <simple>${header.operationName} == 'validarPostulacion'</simple>
                        <to id="toCrear" uri="direct:validarPostulacion"/>
                    </when>
                    <otherwise id="inicioOtherwise">
                        <throwException
                            exceptionType="java.lang.Exception"
                            id="throwExceptionOperacionInvalida" message="La operacion solicitada es invalida"/>
                    </otherwise>
                </choice>
                <doCatch id="inicioDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="inicioToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarMoraHistorica">
            <from id="consultarMoraHistoricaFrom" uri="direct:consultarMoraHistorica"/>
            <doTry id="consultarMoraHistoricaTry">
                <setProperty propertyName="usuario">
                    <simple>${body.getUserId()}</simple>
                </setProperty>
                <setProperty propertyName="canalLlamada">
                    <simple>${body.getCanalLlamada()}</simple>
                </setProperty>
                <setProperty propertyName="rutSocio">
                    <simple>${body.getRutSocio()}</simple>
                </setProperty>
                <bean id="validarRequestConsultarMoraHistorica"  method="validarRequestConsultarMoraHistorica" ref="beanRouteFacade"/>
                <to id="PA_SEL_BONOESCOLARIDAD_CONSULTARMORAHISTORICA_WS" uri="sql-stored:classpath:etc/sql/PA_SEL_BONOESCOLARIDAD_CONSULTARMORAHISTORICA_WS.sql?outputHeader=selBonoEscolaridad&amp;dataSource=#dataSourceDB2"/>
                <bean id="beanSetObtenerCarrosAbandonados"
                      method="beanObtenerBonoEscolaridad" ref="beanRouteFacade"/>
                <unmarshal id="consultarMoraHistoricaUnmarshal">
                    <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
                </unmarshal>
                <doCatch id="crearDoCatchAMQ">
                    <exception>org.apache.camel.ExchangeTimedOutException</exception>
                    <setProperty id="crearCodigoErrorAMQ" propertyName="codigoError">
                        <constant>502</constant>
                    </setProperty>
                    <to id="toCrearExcepcionAMQ" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="validacionesConsultarMoraHistoricaDoCatchPa">
                    <exception>java.lang.IllegalArgumentException</exception>
                    <to id="validacionesConsultarMoraHistoricaToExcepcion" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarMoraHistoricaDBDoCatch">
                    <exception>java.sql.SQLException</exception>
                    <setProperty id="consultarMoraHistoricaDBCodigoError" propertyName="codigoError">
                        <constant>505</constant>
                    </setProperty>
                    <to id="consultarMoraHistoricaToExcepcion" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarMoraHistoricaDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="consultarMoraHistoricaCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="consultarMoraHistoricaToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        
        <route id="ingresarSolicitudCRM">
        	<from uri="direct:ingresarSolicitudCRM"/>
        		<doTry id="ingresarSolicitudCRMTry">
                <setProperty propertyName="uuidSolicitud">
                    <simple>${body.getUuidSolicitud()}</simple>
                </setProperty>
                <setProperty propertyName="rutSocio">
                    <simple>${body.getRutSocio()}</simple>
                </setProperty>
                <setProperty propertyName="rutBeneficiario">
                    <simple>${body.getRutBeneficiario()}</simple>
                </setProperty>
                <setProperty propertyName="nombreBeneficiario">
                    <simple>${body.getNombreBeneficiario()}</simple>
                </setProperty>
                <setProperty propertyName="telefono">
                    <simple>${body.getTelefono()}</simple>
                </setProperty>
                <setProperty propertyName="email">
                    <simple>${body.getEmail()}</simple>
                </setProperty>
                <setProperty propertyName="idTipoPostulacion">
                    <simple>${body.getIdTipoPostulacion()}</simple>
                </setProperty>
                <setProperty propertyName="estadoSolicitud">
                    <simple>${body.getEstadoSolicitud()}</simple>
                </setProperty>
                <marshal>
                    <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
                </marshal>
                <bean id="requestBonosE"  method="requestIngresarSolicitud" ref="beanRouteFacade"/>
                <removeHeaders pattern="CamelHttp*"/>
                <to uri="cxf:bean:edpointBonoEscolaridadCRMasmx"/>
                <bean id="responseBonosE"  method="responseIngresarSolicitud" ref="beanRouteFacade"/>
                <unmarshal id="ingresarSolicitudCRMUnmarshal">
                    <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
                </unmarshal>
                <doCatch id="ingresarSolicitudCRMGeneralDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="ingresarSolicitudCRMgeneralCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="ingresarSolicitudCRMGeneralToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="actualizarSolicitudCRM">
        	<from uri="direct:actualizarSolicitudCRM"/>
        		<doTry id="actualizarSolicitudCRMTry">
                <setProperty propertyName="uuidSolicitud">
                    <simple>${body.getUuidSolicitud()}</simple>
                </setProperty>
                <setProperty propertyName="estadoSolicitud">
                    <simple>${body.getEstadoSolicitud()}</simple>
                </setProperty>
                <setProperty propertyName="observacion">
                    <simple>${body.getObservacion()}</simple>
                </setProperty>
                <log message="(((${body})))"/>
                <marshal>
                    <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
                </marshal>
                <bean id="requestBonosEActualizar"  method="requestActualizarSolicitud" ref="beanRouteFacade"/>
                <removeHeaders pattern="CamelHttp*"/>
                <to uri="cxf:bean:edpointBonoEscolaridadCRMasmx"/>
                <bean id="responseBonosEActualizar"  method="responseActualizarSolicitud" ref="beanRouteFacade"/>
                
                <unmarshal id="actualizarSolicitudCRMUnmarshal">
                    <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
                </unmarshal>
                
                <doCatch id="actualizarSolicitudCRMDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="actualizarSolicitudCRMCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="actualizarSolicitudCRMToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        
        <route id="validarPostulacion">
        	<from uri="direct:validarPostulacion"/>
        	<doTry id="validarPostulacionTry">
        	
        	<setProperty propertyName="rut">
                <simple>${body.getRut()}</simple>
            </setProperty>
            <setProperty propertyName="tipoBono">
                <simple>${body.getTipoBono()}</simple>
            </setProperty>
            <log message="((((${body}))))"/>
        	<to id="selEvalSernacSQL" uri="sql-stored:classpath:etc/sql/pa_verificaBonoEntregado.sql?dataSource=dataSourceSybase&amp;outputHeader=responseValidarBono"/>
        	<log message="((((${header.responseValidarBono}))${header.responseValidarBono.getClass()} ))"/>
        	<bean id="responseValidarPostulacion"  method="responseValidarPostulacion" ref="beanRouteFacade"/>
        	<unmarshal id="validarPostulacionUnmarshal">
                <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
            </unmarshal>
            
            <doCatch id="validarPostulacionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="validarPostulacionCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="validarPostulacionToExcepcion" uri="direct:excepcion"/>
                    
                    <log message="(((${body})))"/>
                    <unmarshal id="validarPostulacionUnmarshal2">
		                <jaxb contextPath="cl.coopeuch.integracion.wsbonoescolaridad.wsdl"/>
		            </unmarshal>
                </doCatch>
            </doTry>
        </route>
        
        <route id="excepcion">
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <doTry id="excepcionTry">
                <bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/>
                <marshal id="excepcionMarshalJson">
                    <json library="Jackson"/>
                </marshal>
                <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
                <to id="excepcionToAmqFault" uri="beanAMQ:{{amq.queue.fault}}?errorHandlerLoggingLevel=TRACE&amp;exchangePattern=InOnly"/>
                <bean id="excepcionBeanExcepcion"
                      method="excepcionCrear" ref="beanRouteFacade"/>
                <doCatch id="excepcionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setBody id="exceptionFinalSetBodyError">
                        <simple>${exception}, Body -&gt; ${body}</simple>
                    </setBody>
                    <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/>
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</blueprint>
