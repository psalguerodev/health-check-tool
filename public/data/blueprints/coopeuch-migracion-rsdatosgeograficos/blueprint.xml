                    <simple>&lt;trama&gt;${body}&lt;/trama&gt;</simple>
                </transform>
                <to id="consultaComunasToXSLSOAP" uri="xslt://etc/xsl/response/IOC759001O_consultaComunas.xsl?saxon=true"/>
                <unmarshal id="consultaComunasUnmarshal">
