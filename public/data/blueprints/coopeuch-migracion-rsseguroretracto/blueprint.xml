<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyGlobal" persistent-id="global"
        placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyLocal"
        persistent-id="wsseguroretracto" placeholder-prefix="[{"
        placeholder-suffix="}]" update-strategy="reload"/>
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    <bean class="com.ibm.mq.jms.MQConnectionFactory" id="websphereConnectionFactory">
        <property name="transportType" value="1"/>
        <property name="hostName" value="{[ibm.mq.host]}"/>
        <property name="port" value="{[ibm.mq.port]}"/>
        <property name="queueManager" value="{[ibm.qm.name]}"/>
        <property name="useConnectionPooling" value="true"/>
        <property name="channel" value="{[ibm.qm.channel]}"/>
    </bean>
    <bean class="org.apache.camel.component.jms.JmsConfiguration" id="websphereConfig">
        <property name="connectionFactory" ref="websphereConnectionFactory"/>
        <property name="concurrentConsumers" value="[{ibm.mq.concurrentConsumers.notificacion}]"/>
    </bean>
    <bean class="org.apache.camel.component.jms.JmsComponent" id="websphere">
        <property name="configuration" ref="websphereConfig"/>
    </bean>
    <bean class="cl.coopeuch.entidad.seguroretracto.util.RouteFacade" id="beanRouteFacade"/>
    <camelcxf:cxfEndpoint address="/WSSeguroRetracto"
        id="endpointWSSeguroRetracto" loggingFeatureEnabled="true"
        serviceClass="cl.coopeuch.entidad.seguroretracto.wsdl.WSSeguroRetractoSOAPPortType" wsdlURL="etc/wsdl/WSSeguroRetracto.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
    <camelcxf:rsServer address="/RSSeguroRetracto"
        id="endpointRSSeguroRetractoRest" loggingFeatureEnabled="true" serviceClass="cl.coopeuch.entidad.seguroretracto.wsdl.WSSeguroRetractoSOAPPortType"/>
    <camelContext id="servicio-seguro-retracto" xmlns="http://camel.apache.org/schema/blueprint">
        <route id="rest-inicio">
            <from id="inicioRestFrom" uri="cxfrs:bean:endpointRSSeguroRetractoRest"/>
            <to id="restToConsultar" uri="direct:inicio"/>
        </route>
        <route id="soap-inicio">
            <from id="inicioSoapServicio" uri="cxf:bean:endpointWSSeguroRetracto"/>
            <to id="SoapToConsultar" uri="direct:inicio"/>
        </route>
        <route id="cxf-inicio">
            <from id="inicioFromServicio" uri="direct:inicio"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setHeader headerName="canalLlamada" id="idHeaderCanalLlamada">
                    <simple>${exchangeProperty.requestEntrada.get(0).canalLlamada}</simple>
                </setHeader>
                <setHeader headerName="userId" id="idHeaderUserId">
                    <simple>${exchangeProperty.requestEntrada.get(0).userId}</simple>
                </setHeader>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionGenerarMandato">
                        <simple>${header.operationName} == 'generar'</simple>
                        <setHeader headerName="idRetracto" id="idHeaderIdRetracto">
                            <simple>${exchangeProperty.requestEntrada.get(0).idRetracto}</simple>
                        </setHeader>
                        <setHeader headerName="rutSocio" id="idHeaderRutSocio">
                            <simple>${exchangeProperty.requestEntrada.get(0).rutSocio}</simple>
                        </setHeader>
                        <to id="toGenerar" uri="direct:generar"/>
                    </when>
                    <otherwise id="inicioOtherwise">
                        <throwException
                            exceptionType="java.lang.Exception"
                            id="throwExceptionOperacionInvalida" message="La operacion solicitada es invalida"/>
                    </otherwise>
                </choice>
                <doCatch id="inicioDoCatch1">
                    <exception>org.apache.camel.processor.validation.SchemaValidationException</exception>
                    <exception>org.apache.camel.ValidationException</exception>
                    <exception>org.apache.camel.TypeConversionException</exception>
                    <transform id="_transform1">
                        <simple>${property.CamelExceptionCaught}</simple>
                    </transform>
                    <transform id="_transform2">
                        <simple>${bodyAs(String)}</simple>
                    </transform>
                    <setProperty id="_setProperty1" propertyName="exceptionBody">
                        <simple>${body}</simple>
                    </setProperty>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <setBody id="inicioShemaValidationExceptionSetBodyError">
                        <simple>ERROR ServicioSeguroRetracto-Inicio-soap: -Excepcion: ${property.exceptionBody}\n-BodyOrigen: ${body}</simple>
                    </setBody>
                    <setProperty id="_setProperty2" propertyName="es_fault">
                        <simple>1</simple>
                    </setProperty>
                    <to id="toInicioExcepcion" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="inicioDoCatch2">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="toInicioExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="generar">
            <from id="generarFrom" uri="direct:generar"/>
            <doTry id="generarDoTry">
                <setBody id="generarSetBody">
                    <simple>$simple{body.get(0)}</simple>
                </setBody>
                <setProperty id="generarSetPropertyBody" propertyName="bodyRequest">
                    <simple>${body}</simple>
                </setProperty>
                <marshal id="generarMarshal">
                    <jaxb contextPath="cl.coopeuch.entidad.seguroretracto.wsdl"/>
                </marshal>
                <convertBodyTo id="generarConvertBodyToString" type="java.lang.String"/>
                <bean id="generarUUID" method="crearJMSCorrelationId24" ref="beanRouteFacade"/>
                <to id="generarToXSLTrama" uri="xslt://etc/xsl/request/IOC716501IRequest.xsl"/>
                <setProperty id="generarCodigosDeSeguro" propertyName="codigosDeSeguro">
                    <simple>${body}</simple>
                </setProperty>
                <setBody id="generarSetBody2">
                    <simple>${exchangeProperty.bodyRequest}</simple>
                </setBody>
                <convertBodyTo id="generarConvertBodyToString2" type="java.lang.String"/>
                <to id="generarToXSLTrama2" uri="xslt://etc/xsl/request/IOC716501IRequest2.xsl"/>
                <setProperty id="generarNumerosDeOperacion" propertyName="numerosDeOperacion">
                    <simple>${body}</simple>
                </setProperty>
                <setBody id="generarSetBody3">
                    <simple>${exchangeProperty.bodyRequest}</simple>
                </setBody>
                <convertBodyTo id="generarConvertBodyToString3" type="java.lang.String"/>
                <to id="generarToXSLTrama3" uri="xslt://etc/xsl/request/IOC716501IRequest3.xsl"/>
                <setProperty id="generarInicioTrama" propertyName="InicioTrama">
                    <simple>${body}</simple>
                </setProperty>
                <setBody id="generarSetBody4">
                    <simple>${exchangeProperty.InicioTrama}${exchangeProperty.numerosDeOperacion}${exchangeProperty.codigosDeSeguro}</simple>
                </setBody>
                <log id="generarTramaRequest" loggingLevel="INFO" message="Trama generada = |${body}|"/>
                <to id="generarToAmq" uri="beanAMQ:{{amq.queue.req}}?preserveMessageQos=true&amp;errorHandlerLoggingLevel=TRACE&amp;jmsMessageType=Text&amp;replyTo={{amq.queue.res}}&amp;replyToType=Shared&amp;replyToOverride={{amq.queue.res}}&amp;synchronous=true&amp;exchangePattern=InOut"/>
                <log id="generarTramaResponse" loggingLevel="INFO" message="Trama recibida = |${body}|"/>
                <choice id="_choice1">
                    <when id="ejecucionCorrecta">
                        <simple>${body} contains 'IOC71650'</simple>
                        <transform id="generarTransformBodyStr">
                            <simple>&lt;trama&gt;${body}&lt;/trama&gt;</simple>
                        </transform>
                        <convertBodyTo id="_convertBodyTo1" type="org.w3c.dom.Document"/>
                        <to id="generarToTramaToXSLT" uri="xslt://etc/xsl/response/IOC716501IResponse.xsl"/>
                    </when>
                    <otherwise id="_otherwise1">
                        <transform id="generarTransformBodyStr2">
                            <simple>&lt;trama&gt;${body}&lt;/trama&gt;</simple>
                        </transform>
                        <convertBodyTo id="_convertBodyTo2" type="org.w3c.dom.Document"/>
                        <convertBodyTo id="_convertBodyTo3" type="org.w3c.dom.Document"/>
                        <to id="generarToTramaToXSLError" uri="xslt://etc/xsl/errors/IOC_error.xsl"/>
                    </otherwise>
                </choice>
                <log id="generarTramaResponsseeeeessdddsse"
                    loggingLevel="INFO" message="Trama recibida = |${body}|"/>
                <unmarshal id="generarUnmarshallResponse">
                    <jaxb
                        contextPath="cl.coopeuch.entidad.seguroretracto.wsdl" objectFactory="true"/>
                </unmarshal>
                <log id="generarTramaResponsseeeeesssse"
                    loggingLevel="INFO" message="Trama marshaleada = |${body}|"/>
                <removeHeader headerName="canalLlamada" id="_removeHeader1"/>
                <removeHeader headerName="userId" id="_removeHeader2"/>
                <removeHeader headerName="rutSocio" id="_removeHeader3"/>
                <removeHeader headerName="idRetracto" id="_removeHeader4"/>
                <log id="_log1" message="${in.headers}"/>
                <convertBodyTo id="_convertBodyTo4" type="cl.coopeuch.entidad.seguroretracto.wsdl.GenerarResponse"/>
                <doCatch id="generarDoCatch">
                    <exception>java.lang.Exception</exception>
                    <log id="_log2" message="${exception.message}"/>
                    <setProperty id="generarCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <to id="generarToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="excepcion">
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <doTry id="excepcionTry">
                <!--<bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/> -->
                <marshal id="excepcionMarshalJson">
                    <json library="Jackson"/>
                </marshal>
                <!-- <bean id="excepcionBeanExcepcion" method="excepcionCrear" ref="beanRouteFacade"/> -->
                <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
                <doCatch id="excepcionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setBody id="exceptionFinalSetBodyError">
                        <simple>${exception}, Body -&gt; ${body}</simple>
                    </setBody>
                    <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/>
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</blueprint>
