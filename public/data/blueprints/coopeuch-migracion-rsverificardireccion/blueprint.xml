<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyGlobal" persistent-id="global"
        placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyWsVerificarDireccion"
        persistent-id="wsverificardireccion" placeholder-prefix="[{"
        placeholder-suffix="}]" update-strategy="reload"/>
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    <bean
        class="cl.coopeuch.integracion.verificardireccion.util.RouteFacade" id="beanRouteFacade"/>
    <camelcxf:cxfEndpoint address="/WSVerificarDireccion"
        id="endpointWSVerificarDireccion"
        serviceClass="cl.coopeuch.integracion.verificardireccion.wsdl.WSVerificarDireccionSOAPPortType" wsdlURL="etc/wsdl/WSVerificarDireccion.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
    <camelcxf:rsServer address="/RSVerificarDireccion"
        id="endpointRSVerificarDireccion" serviceClass="cl.coopeuch.integracion.verificardireccion.services.CambioEstadoRest"/>
    <camelcxf:rsClient address="[{listarcomunas.endpoint}]" id="endpointListarComunas">
        <camelcxf:providers>
            <ref component-id="jsonProvider"/>
        </camelcxf:providers>
    </camelcxf:rsClient>
    <camelcxf:rsClient address="[{registrardireccion.endpoint}]" id="endpointRegistrarDireccion">
        <camelcxf:properties>
            <entry key="throwExceptionOnFailure" value="false"/>
        </camelcxf:properties>
        <camelcxf:providers>
            <ref component-id="jsonProvider"/>
        </camelcxf:providers>
    </camelcxf:rsClient>
    <camelcxf:rsClient address="[{crearticket.endpoint}]" id="endpointCrearTicket">
        <camelcxf:properties>
            <entry key="throwExceptionOnFailure" value="false"/>
            <entry key="bridgeEndpoint" value="true"/>
        </camelcxf:properties>
        <camelcxf:providers>
            <ref component-id="jsonProvider"/>
        </camelcxf:providers>
    </camelcxf:rsClient>
    <camelcxf:rsClient address="[{consultarticket.endpoint}]" id="endpointConsultarTicket">
        <camelcxf:providers>
            <ref component-id="jsonProvider"/>
        </camelcxf:providers>
    </camelcxf:rsClient>
    <bean class="org.apache.cxf.jaxrs.provider.json.JSONProvider" id="jsonProvider"/>
    <camelContext id="servicio-verificar-direccion" xmlns="http://camel.apache.org/schema/blueprint">
        <route id="inicio-soap">
            <from id="soapInicio" uri="cxf:bean:endpointWSVerificarDireccion"/>
            <to id="soapToInicioWs" uri="direct:iniciows"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSVerificarDireccion"/>
            <to id="restToInicioWs" uri="direct:iniciows"/>
        </route>
        <route id="cxf-inicio">
            <from id="iniciows" uri="direct:iniciows"/>
            <doTry id="inicioTry">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <toD id="soapInicioToOperacionName" uri="direct:${header.operationName}"/>
                <removeHeaders id="soapInicioRemoveHeaders" pattern="*"/>
                <doCatch id="inicioDoCatch">
                    <exception>java.lang.Exception</exception>
                    <to id="toInicioExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="listarComunas">
            <from id="listarComunasFrom" uri="direct:listarComunas"/>
            <doTry id="listarComunasTry">
                <bean id="listarComunasBeanSetHeader"
                    method="listarComunasBeanSetHeader" ref="beanRouteFacade"/>
                <to id="listarComunasCall" uri="cxfrs://bean://endpointListarComunas"/>
                <bean id="listarComunasBeanMapResponse"
                    method="listarComunasBeanMapResponse" ref="beanRouteFacade"/>
                <doCatch id="listarComunasDoCatchHttp">
                    <exception>org.apache.camel.CamelException</exception>
                    <setProperty id="listarComunasCodigoErrorHttp" propertyName="codigoError">
                        <constant>428</constant>
                    </setProperty>
                    <setProperty id="listarComunasStatusCode" propertyName="statusCode">
                        <simple>${exception.statusCode}</simple>
                    </setProperty>
                    <to id="listarComunasToExcepcionHttp" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="listarComunasDoCatch">
                    <exception>java.lang.Exception</exception>
                    <to id="listarComunasToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="routeCambioEstado">
            <from id="fromCambioEstado" uri="direct:actualizaEstado"/>
            <doTry id="_doTry1">
                <bean id="cambioEstadoTicketBeanMapResponse"
                    method="consultarTicketBeanMapResponse" ref="beanRouteFacade"/>
                <marshal id="_marshal1">
                    <json library="Jackson"/>
                </marshal>
                <bean id="_bean1" method="insertarSQS" ref="beanRouteFacade"/>
                <doCatch id="_doCatch1">
                    <exception>org.apache.camel.CamelException</exception>
                    <setProperty id="_setProperty2" propertyName="codigoError">
                        <constant>428</constant>
                    </setProperty>
                    <setProperty id="_setProperty3" propertyName="statusCode">
                        <simple>${exception.statusCode}</simple>
                    </setProperty>
                    <to id="_to1" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="_doCatch2">
                    <exception>java.lang.Exception</exception>
                    <to id="_to2" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarTicket">
            <from id="consultarTicketFrom" uri="direct:consultarTicket"/>
            <doTry id="consultarTicketTry">
                <bean id="consultarTicketBeanSetHeader"
                    method="consultarTicketBeanSetHeader" ref="beanRouteFacade"/>
                <log id="_log2" message="aaaaaaaaaaaaaaaaaaaaaaaa${body.get(0)}"/>
                <to id="consultarTicketCall" uri="cxfrs://bean://endpointConsultarTicket"/>
                <convertBodyTo id="_convertBodyTo4" type="String"/>
                <bean id="consultarTicketBeanMapResponse"
                    method="consultarTicketBeanMapResponse" ref="beanRouteFacade"/>
                <doCatch id="consultarTicketDoCatchJsonParseException">
                    <exception>com.fasterxml.jackson.core.JsonParseException</exception>
                    <setProperty
                        id="consultarTicketCodigoJsonParseException" propertyName="codigoError">
                        <constant>430</constant>
                    </setProperty>
                    <to
                        id="consultarTicketJsonParseExceptionToExcepcion" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarTicketDoCatchHttp">
                    <exception>org.apache.camel.CamelException</exception>
                    <setProperty id="consultarTicketCodigoErrorHttp" propertyName="codigoError">
                        <constant>428</constant>
                    </setProperty>
                    <setProperty id="consultarTicketStatusCode" propertyName="statusCode">
                        <simple>${exception.statusCode}</simple>
                    </setProperty>
                    <to id="consultarTicketToExcepcionHttp" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarTicketDoCatch">
                    <exception>java.lang.Exception</exception>
                    <to id="consultarTicketToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="crearTicketDG">
            <from id="crearTicketDGFrom" uri="direct:crearTicketDG"/>
            <doTry id="consultarTicketTry1">
                <setProperty id="_setProperty1" propertyName="entrada">
                    <simple>${body.get(0)}</simple>
                </setProperty>
                <bean id="registrarDireccionDG"
                    method="registrarDireccionDG" ref="beanRouteFacade"/>
                <to id="registrarDireccionCall1" uri="cxfrs://bean://endpointRegistrarDireccion"/>
                <convertBodyTo id="_convertBodyTo1" type="String"/>
                <when id="_when1">
                    <simple>${header.CamelHttpResponseCode} != '200'</simple>
                    <throwException exceptionType="java.lang.Exception"
                        id="error1" message="${body}"/>
                </when>
                <bean id="crearTicketDGRequest"
                    method="crearTicketDGRequest" ref="beanRouteFacade"/>
                <convertBodyTo id="_convertBodyTo2" type="String"/>
                <to id="crearTicketDGCall" uri="cxfrs://bean://endpointCrearTicket"/>
                <convertBodyTo id="_convertBodyTo3" type="String"/>
                <when id="_when2">
                    <simple>${header.CamelHttpResponseCode} != '200'</simple>
                    <throwException exceptionType="java.lang.Exception"
                        id="error2" message="${body}"/>
                </when>
                <bean id="crearTicketBeanMapResponse1"
                    method="crearTicketDGBeanMapResponse" ref="beanRouteFacade"/>
                <doCatch id="consultarTicketDoCatchHttp1">
                    <exception>org.apache.camel.CamelException</exception>
                    <setProperty id="consultarTicketCodigoErrorHttp1" propertyName="codigoError">
                        <constant>428</constant>
                    </setProperty>
                    <setProperty id="consultarTicketStatusCode1" propertyName="statusCode">
                        <simple>${exception.statusCode}</simple>
                    </setProperty>
                    <to id="consultarTicketToExcepcionHttp1" uri="direct:excepcion"/>
                </doCatch>
                <doCatch id="consultarTicketDoCatch1">
                    <exception>java.lang.Exception</exception>
                    <to id="consultarTicketToExcepcion1" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="excepcion">
            <!--             <doTry id="excepcionTry"> -->
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/>
            <marshal id="excepcionMarshalJson">
                <json library="Jackson"/>
            </marshal>
            <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
            <to id="excepcionToAmqFault" uri="beanAMQ:{{amq.queue.fault}}?errorHandlerLoggingLevel=TRACE&amp;exchangePattern=InOnly"/>
            <bean id="excepcionBeanExcepcion" method="excepcionCrear" ref="beanRouteFacade"/>
            <!--                 <doCatch id="excepcionDoCatch"> -->
            <!--                     <exception>java.lang.Exception</exception> -->
            <!--                     <setBody id="exceptionFinalSetBodyError"> -->
            <!--                         <simple>${exception}, Body -&gt; ${body}</simple> -->
            <!--                     </setBody> -->
            <!--                     <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/> -->
            <!--                 </doCatch> -->
            <!--             </doTry> -->
        </route>
    </camelContext>
</blueprint>
