<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:http="http://cxf.apache.org/transports/http/configuration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd                                 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">
    <cm:property-placeholder id="propertyGlobal" persistent-id="global"
        placeholder-prefix="{[" placeholder-suffix="]}" update-strategy="reload"/>
    <cm:property-placeholder id="propertyLocal" persistent-id="wslog"
        placeholder-prefix="[{" placeholder-suffix="}]" update-strategy="reload"/>
    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="beanAMQ">
        <property name="brokerURL" value="{[amq.broker.url]}"/>
        <property name="userName" value="{[amq.username]}"/>
        <property name="password" value="{[amq.password]}"/>
        <property name="usePooledConnection" value="true"/>
    </bean>
    <bean class="org.apache.commons.dbcp.BasicDataSource"
        destroy-method="close" id="dataSourceSqlServer">
        <property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver"/>
        <property name="url" value="[{wslog.sqlserver.url}];charset=iso_1"/>
        <property name="username" value="[{wslog.sqlserver.username}]"/>
        <property name="password" value="[{wslog.sqlserver.password}]"/>
        <property name="timeBetweenEvictionRunsMillis" value="[{wslog.sqlserver.timeBetweenEvictionRunsMillis}]"/>
        <property name="numTestsPerEvictionRun" value="[{wslog.sqlserver.numTestsPerEvictionRun}]"/>
        <property name="minEvictableIdleTimeMillis" value="[{wslog.sqlserver.minEvictableIdleTimeMillis}]"/>
        <property name="maxActive" value="[{wslog.sqlserver.maxActive}]"/>
    </bean>
    <bean class="cl.coopeuch.integracion.WSLog.util.RouteFacade" id="beanRouteFacade"/>
    <camelcxf:cxfEndpoint address="/WSLog" id="endpointWSLog"
        serviceClass="cl.coopeuch.integracion.WSLog.wsdl.WSLogSOAPPortType" wsdlURL="etc/wsdl/WSLog.wsdl">
        <camelcxf:properties>
            <entry key="schema-validation-enabled" value="true"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>
    <camelcxf:rsServer address="/RSLog" id="endpointRSLog" serviceClass="cl.coopeuch.integracion.WSLog.wsdl.WSLogSOAPPortType">
        <camelcxf:providers>
            <bean
                class="org.apache.cxf.jaxrs.provider.json.JSONProvider" id="jsonProvider">
                <property name="dropRootElement" value="true"/>
                <property name="supportUnwrapped" value="true"/>
            </bean>
        </camelcxf:providers>
    </camelcxf:rsServer>
    <camelContext id="WSLog" xmlns="http://camel.apache.org/schema/blueprint">
        <route id="inicio-soap">
            <from id="inicioFromSoap" uri="cxf:bean:endpointWSLog"/>
            <to id="soapToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="inicio-rest">
            <from id="restInicio" uri="cxfrs:bean:endpointRSLog"/>
            <to id="restToInicioWs" uri="direct:cxf-inicio"/>
        </route>
        <route id="cxf-inicio">
            <from id="inicioFromServicio" uri="direct:cxf-inicio"/>
            <doTry id="_doTryinicio">
                <setProperty id="inicioSetRequest" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="inicioSetTipoRequest" propertyName="tipoRequest">
                    <simple>$simple{body.get(0).class.getSimpleName()}</simple>
                </setProperty>
                <setBody id="inicioSetBody">
                    <simple>$simple{body.get(0)}</simple>
                </setBody>
                <setProperty id="_setProperty15" propertyName="requestEntrada">
                    <simple>${body}</simple>
                </setProperty>
                <setProperty id="_setProperty1" propertyName="userId">
                    <simple>$simple{body.userId}</simple>
                </setProperty>
                <setProperty id="_setProperty2" propertyName="canalLlamada">
                    <simple>$simple{body.canalLlamada}</simple>
                </setProperty>
                <setProperty id="_setProperty3" propertyName="canal">
                    <simple>$simple{body.condicion.canal}</simple>
                </setProperty>
                <setProperty id="_setProperty4" propertyName="codigoError">
                    <simple>$simple{body.condicion.codigoError}</simple>
                </setProperty>
                <setProperty id="_setProperty5" propertyName="fechaInicio">
                    <simple>$simple{body.condicion.fechaInicio}</simple>
                </setProperty>
                <setProperty id="_setProperty6" propertyName="fechaTermino">
                    <simple>$simple{body.condicion.fechaTermino}</simple>
                </setProperty>
                <setProperty id="_setProperty7" propertyName="operacion">
                    <simple>$simple{body.condicion.operacion}</simple>
                </setProperty>
                <setProperty id="_setProperty8" propertyName="proceso">
                    <simple>$simple{body.condicion.proceso}</simple>
                </setProperty>
                <setProperty id="_setProperty9" propertyName="servicio">
                    <simple>$simple{body.condicion.servicio}</simple>
                </setProperty>
                <setProperty id="_setProperty10" propertyName="tipoMensaje">
                    <simple>$simple{body.condicion.tipoMensaje}</simple>
                </setProperty>
                <setProperty id="_setProperty11" propertyName="ordenamiento">
                    <simple>$simple{body.resultado.ordenamiento}</simple>
                </setProperty>
                 <bean id="validaringresoc" method="validarIngreso" ref="beanRouteFacade"/>
            <choice id="_choice1">
                <when id="_when1">
                    <simple>${headers.validacion}</simple>
                    <setProperty id="_setPropertyce" propertyName="codigoError">
                        <simple>417</simple>
                    </setProperty>
                    <setProperty id="_setPropertyme" propertyName="mensajeError">
                        <simple>Los datos ingresados son incorrectos</simple>
                    </setProperty>
                    <setProperty id="_setPropertyde" propertyName="DetalleError">
                        <simple>${headers.validacion}</simple>
                    </setProperty>
                    <to id="_to1" uri="direct:excepcion"/>
                    <stop id="_stop2"/>
                </when>
            </choice>
                <choice id="inicioChoice">
                    <when id="inicioWhenordenamiento">
                        <simple>$simple{body.resultado.ordenamiento} == '' or $simple{body.resultado.ordenamiento} regex '^\s*$'  </simple>
                        <setProperty id="_setProperty13" propertyName="ordenamiento">
                            <simple>{{ordenamiento}}</simple>
                        </setProperty>
                    </when>
                </choice>
                <choice id="inicioChoiceOperacion">
                    <when id="inicioWhenOperacionConsultar">
                        <simple>${header.operationName} == 'consultarMensajes'</simple>
                        <to id="toConsultar" uri="direct:consultarMensajes"/>
                    </when>
                    <when id="inicioWhenOperacionConsultarEstadisticas">
                        <simple>${header.operationName} == 'consultarEstadisticas'</simple>
                        <to id="toConsultarEstadisticas" uri="direct:consultarEstadisticas"/>
                    </when>
                    <otherwise id="inicioOtherwise">
                        <throwException
                            exceptionType="java.lang.Exception"
                            id="throwExceptionOperacionInvalida" message="La operacion solicitada es invalida"/>
                    </otherwise>
                </choice>
                <removeHeaders id="_removeHeaders1" pattern="*"/>
                <doCatch id="inicioDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="inicioCodigoError" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <setProperty id="_setProperty16" propertyName="DetalleError">
                        <simple>${exception.message}</simple>
                    </setProperty>
                    <setProperty id="_setProperty17" propertyName="mensajeError">
                        <simple>Error interno del servidor</simple>
                    </setProperty>
                    <to id="inicioToExcepcion" uri="direct:excepcion"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarMensajes">
            <from id="consultarMensajesFrom" uri="direct:consultarMensajes"/>
            <doTry id="consultarMensajesTry">
                <setProperty id="_setProperty12" propertyName="cantidadRegistros">
                    <simple>$simple{body.resultado.cantidadRegistros}</simple>
                </setProperty>
                <choice id="consultarMensajesChoice">
                    <when id="inicioWhencantidadRegistros">
                        <simple> ${exchangeProperty.cantidadRegistros} == 0 || ${exchangeProperty.cantidadRegistros} &gt; {{cantidadRegistros}}  </simple>
                        <setProperty id="_setProperty14" propertyName="cantidadRegistros">
                            <simple>{{cantidadRegistros}}</simple>
                        </setProperty>
                    </when>
                </choice>
                <to id="spConsultarMensajes" uri="sql-stored:classpath:etc/sql/PA_SELConsultarMensajes.sql?outputHeader=respuesta&amp;dataSource=dataSourceSqlServer"/>
                <bean id="consultarBeanProceso"
                    method="procesoConsultarMensajeResponse" ref="beanRouteFacade"/>
                <unmarshal id="unmarshalconsultar">
                    <jaxb contextPath="cl.coopeuch.integracion.WSLog.wsdl"/>
                </unmarshal>
                <doCatch id="consultarMensajesCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="_setProperty19" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <setProperty id="_setProperty20" propertyName="DetalleError">
                        <simple>${exception.message}</simple>
                    </setProperty>
                    <setProperty id="_setProperty21" propertyName="mensajeError">
                        <simple>Error interno del servidor</simple>
                    </setProperty>
                    <to id="consultarMensajesto" uri="direct:excepcion"/>
                    <stop id="consultarMensajesstop"/>
                </doCatch>
            </doTry>
        </route>
        <route id="consultarEstadisticas">
            <from id="consultarEstFrom" uri="direct:consultarEstadisticas"/>
            <doTry id="consultarEstTry">
                <to id="spConsultarEstadisticas" uri="sql-stored:classpath:etc/sql/PA_SELConsultarEstadisticas.sql?outputHeader=respuestae&amp;dataSource=dataSourceSqlServer"/>
                <bean id="consultarBeanProcesoEst"
                    method="procesoConsultarEstadisticasResponse" ref="beanRouteFacade"/>
                <unmarshal id="unmarshalconsultarEstadisticas">
                    <jaxb contextPath="cl.coopeuch.integracion.WSLog.wsdl"/>
                </unmarshal>
                <doCatch id="consultarEstCatch">
                    <exception>java.lang.Exception</exception>
                    <setProperty id="_setProperty22" propertyName="codigoError">
                        <constant>500</constant>
                    </setProperty>
                    <setProperty id="_setProperty23" propertyName="DetalleError">
                        <simple>${exception.message}</simple>
                    </setProperty>
                    <setProperty id="_setProperty24" propertyName="mensajeError">
                        <simple>Error interno del servidor</simple>
                    </setProperty>
                    <to id="consultarEstto" uri="direct:excepcion"/>
                    <stop id="consultarEststop"/>
                </doCatch>
            </doTry>
        </route>
        <route id="excepcion">
            <from id="excepcionfrom" uri="direct:excepcion"/>
            <doTry id="excepcionTry">
                <bean id="beanExceptionAmq" method="excepcionAmq" ref="beanRouteFacade"/>
                <marshal id="excepcionMarshalJson">
                    <json library="Jackson"/>
                </marshal>
                <convertBodyTo id="excepcionConvertTo" type="java.lang.String"/>
                <removeHeaders id="removeHeadersexcepcion" pattern="*"/>
                <to id="excepcionToAmqFault" uri="beanAMQ:{{amq.queue.fault}}?errorHandlerLoggingLevel=TRACE&amp;exchangePattern=InOnly"/>
                <bean id="excepcionBeanExcepcion"
                    method="excepcionCrear" ref="beanRouteFacade"/>
                <doCatch id="excepcionDoCatch">
                    <exception>java.lang.Exception</exception>
                    <setBody id="exceptionFinalSetBodyError">
                        <simple>${exception}, Body -&gt; ${body}</simple>
                    </setBody>
                    <log id="excepcionLog" loggingLevel="ERROR" message="Ha ocurrido un error al escribir en la cola de errores o en la ejecucion del servicio: ${body}"/>
                </doCatch>
            </doTry>
        </route>
    </camelContext>
</blueprint>
